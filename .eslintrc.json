{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended"
  ],
  "plugins": ["import"],
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "react/prop-types": "off"
      }
    },
    {
      "files": ["*.jsx"],
      "rules": {
        "react/prop-types": "error"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@components", "./src/components"],
          ["@config", "./src/config"],
          ["@context", "./src/context"],
          ["@data", "./src/data"],
          ["@hooks", "./src/hooks"],
          ["@media", "./src/media"],
          ["@pages", "./src/pages"],
          ["@styles", "./src/styles"],
          ["@utils", "./src/utils"],
          ["@api", "./src/api.js"]
        ],
        "extensions": [".js", ".jsx", ".json"]
      }
    },
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "arrow-spacing": "error",
    "eol-last": ["error", "always"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
  
    "max-len": ["error", { "code": 120, "ignoreUrls": true }],
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "type"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always-and-inside-groups"
      }
    ],
    "react/react-in-jsx-scope": "off"
  }
}
